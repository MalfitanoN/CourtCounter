<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.courtcounter.malfitanon.courtcounter.GameCounter">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                        <EditText
                            android:id="@+id/name1"
                            android:hint="Enter Name"
                            android:imeOptions = "actionDone"
                            android:inputType="text"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="29sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="#000000"
                            android:background="#666666"
                            android:padding="20dp"
                            />



                        <TextView
                            android:text="Score"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="36sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="#ffff00"
                            android:background="#000000"
                            android:padding="20dp"
                            />



                        <TextView
                            android:id="@+id/points"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="75sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="#000000"
                            android:background="#99e6ff"
                            android:padding="20dp"
                            />




                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="1 Point"
                            android:onClick="addPoints"
                            />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="-1 Point"
                    android:onClick="minusPoints"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <EditText
                            android:id="@+id/name2"
                            android:hint="Enter Name"
                            android:imeOptions = "actionDone"
                            android:inputType="text"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="29sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="#000000"
                            android:background="#666666"
                            android:padding="20dp"
                            />


                        <TextView
                            android:text="Score"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="36sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="#000000"
                            android:background="#ffff00"
                            android:padding="20dp"
                            />


                        <TextView
                            android:id="@+id/points2"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="75sp"
                            android:fontFamily="sans-serif-light"
                            android:textColor="#000000"
                            android:background="#99e600"
                            android:padding="20dp"
                            />



                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="1 Point"
                            android:onClick="addPoints2"
                            />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="-1 Point"
                        android:onClick="minusPoints2"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="reset"
        android:onClick="reset"
        />
</LinearLayout>
